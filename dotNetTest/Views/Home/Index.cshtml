@using System.Collections.Specialized
@using System.Data.SqlClient;
@using System.Text;
@using dotNetTest.Models

@{


    var users = ViewBag.Users;
    var questions = ViewBag.Questions;
    var answers = ViewBag.Answers;
    var nouns = ViewBag.Nouns;
    var verbs = ViewBag.Verbs;





    var answer = "";
    var question = "";

    if (IsPost)
    {
        answer = Request.Form["answer"];
        question = Request.Form["question"];

        Answer answerInsert = new Answer();
        Question questionInsert = new Question();
        questionInsert.InsertQuestion(question, "question", "question");
        answerInsert.Insert(answer, "answer", "answer");


        Response.Redirect("~/Home/Index");

    }
}
    



